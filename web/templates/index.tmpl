{{ template "layout" . }}
{{ define "content" }}
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{ range .Contacts }}
    <tr>
      <td>{{ .FirstName }}</td>
      <td>{{ .LastName }}</td>
      <td>{{ .Phone }}</td>
      <td>{{ .Email }}</td>
      <td>
        <a href="/contacts/{{ .ID }}/edit">Edit</a>
        <a href="/contacts/{{ .ID }}">View</a>
      </td>
    </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
